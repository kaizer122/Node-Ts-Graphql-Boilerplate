{
  "scripts": {
    "dist": "node -r ts-node/register ./dist/index.js",
    "start": "node dist/index.js",
    "build": "rm -rf ./dist && tsc -p .",
    "dev": "nodemon",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "gen:types": "ts-node ./scripts/generateTypes.ts && eslint './src/types/graphTypes.ts' --quiet --fix",
    "gen:module": "ts-node .scripts/generateModule.ts",
    "test": "jest --runInBand ./tests",
    "clear-cache": "jest --clearCache",
    "coverage": "jest --coverage"
  },
  "license": "UNLICENCED",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/index.ts"
    ]
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.0.16",
    "@graphql-tools/merge": "^6.0.16",
    "apollo-server": "^2.16.1",
    "apollo-server-express": "^2.16.1",
    "bcrypt": "^5.0.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "easygraphql-tester": "^5.1.6",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "faker": "^4.1.0",
    "graphql-log": "^0.1.3",
    "jest": "^26.2.2",
    "jest-transform-graphql": "^2.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb-memory-server": "^6.6.3",
    "mongoose": "^5.9.27",
    "mongoose-lean-virtuals": "^0.6.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/typescript": "^1.17.8",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.35",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "yargs": "^15.4.1",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
